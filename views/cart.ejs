    //update cart

    async function updateQuantity(productId, stock, current, need) {
   
        const verify = (need === 'sub') ? (parseInt(current) > 1) : ((need === 'sum') ? (parseInt(current) < parseInt(stock)) : false);


    if (verify) {
        let res = await fetch('/update-cart-quantity', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                productId,
                need
            })
        });

        if (res.status === 200) {
            const data = await res.json();
            // alert(data.cart._id)
            for(i=0;i<data.cart.items.length;i++){
            document.getElementById(`qty-${data.cart.items[i].productId}`).innerHTML = data.cart.items[i].quantity; 
            }
            document.getElementById(`carttotal`).innerHTML = `Rs.${data.cart.billTotal}.00`;
            document.getElementById(`carttotal2`).innerHTML = `Rs.${data.cart.billTotal}.00`;
            document.getElementById(`carttotal3`).innerHTML = `Rs.${data.cart.billTotal}.00`;
            document.getElementById(`shipping`).innerHTML = `Rs.${data.cart.shipping}.00`;
            

        } else {
            await Swal.fire({
                title: 'Error',
                text: 'Maximum quantity per person for this product has been reached',
                icon: 'error',
                showConfirmButton: true
            });
        }
    } else {
        await Swal.fire({
            title: 'Error',
            text: 'Stock limit exceeded.',
            icon: 'error', 
            showConfirmButton: true
        });
    }
}

