                    });

                }) 
        }

        function rejectCancel(orderId) {
   

    fetch('/admin/rejectCancel', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            orderId
        }),
    })
    .then((response) => {
        if (!response.ok) {
            throw new Error('Network response was not ok.');
        }
        return response.json();
    })
    .then((data) => {
        if (data.success) {
            // Handle success
            Swal.fire({
                icon: 'error',
