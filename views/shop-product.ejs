function searchproduct(category) {
    let text = document.getElementById("search").value;
    const searchInput = document.getElementById('search');
    searchInput.addEventListener('keydown', function(event) {
        if (event.key === 'Enter') {
            location.href=`/shop?category=${category}&search=${text}`
        }
    });
    document.querySelector('#searchResultsCollapse').classList.add('show');
  
    searchInput.addEventListener('blur', function() {
        setTimeout(function() {
            document.querySelector('#searchResultsCollapse').classList.remove('show');
        }, 200);
    });
  
    fetch(`/search?text=${text}&category=${category}`)
    
        .then(response => response.json())
        .then(data => {
            let searchResultDiv = document.getElementById("searchResult");
            searchResultDiv.innerHTML = '';

            if (data.product.length === 0) {
                searchResultDiv.innerHTML = '<p>No products found.</p>';
            } else {
                data.product.forEach(product => {
                    let productDiv = document.createElement("div");
                    productDiv.classList.add("product");

                    productDiv.innerHTML = `
                    <div class='card-body d-flex'>
                    <div>
                        
                            <img src="/uploads/productImages/${product.images[0]}" style="width:50px;" alt="${product.name}">
                    </div>
                    <div>
                        <h6>${product.name}</h6>
                        <p>Price: ${product.price}</p>
                        
                    </div>
                </div> `;

                    searchResultDiv.appendChild(productDiv);
                });
            }
        })
        .catch(error => {
            console.error('Error fetching search results:', error);
        });
}




