        async function addtowishlist(productid) {
    try {
        const response = await fetch(`/addToWishlist?id=${productid}`);
       
        if (response.ok) {
            
            
            const Toast = Swal.mixin({
  toast: true,
  position: "bottom", 
  showConfirmButton: false,
  timer: 3000,
  timerProgressBar: true,
  background:"black",
  color:"white",
  didOpen: (toast) => {
    toast.addEventListener('mouseenter', Swal.stopTimer); 
    toast.addEventListener('mouseleave', Swal.resumeTimer); 
  }
});

Toast.fire({
  icon: "success",
  title: "Added to wishlist"
});
const wishlistLink = document.getElementById(`add-to-wishlist-${productid}`);
const wishlistIcon=document.getElementById(`wishlist-${productid}`)
    wishlistIcon.style.color = "red";
    wishlistLink.onclick = function() { removewishlist(productid); };
            
        } else {
            
            throw new Error('Failed to add to wishlist');
        }
    } catch (error) {
        console.error('Error:', error.message);
        await Swal.fire({
            title: 'Error',
            text: 'Failed to add to wishlist',
            icon: 'error',
            showConfirmButton: true
        });
    }
}


async function removewishlist(productid) {
    try {
        const response = await fetch(`/removeWishlist?id=${productid}`);
       
