<%-include('adminheader')-%>

<body>
      <main class="main-wrap">
        <header class="main-header navbar">
         
            <div class="col-nav ms-auto">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i
                        class="material-icons md-apps"></i> </button>
                <ul class="nav">
                  
                    <li class="nav-item">
                        <a class="nav-link btn-icon darkmode" href="#"> <i class="material-icons md-nights_stay"></i> </a>
                    </li>
             
                    <li class="dropdown nav-item">
                        <a class="dropdown-item text-danger" href="/admin/logout"><i
                            class="material-icons md-exit_to_app"></i>Logout</a>
                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Categories </h2>
                    <p>Add, edit or delete a category</p>
                </div>
               
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form action="/admin/adminCategory" method="post" enctype="application/x-www-form-urlencoded">
                                <div class="mb-4">

                                    <label for="category_name" class="form-label">Name</label>
                                    <input type="text" placeholder="Type here" name="name" class="form-control" id="category_name" />
                                    <% if (errors && errors.some(error => error.path === 'name')) { %>
                                        <% errors.filter(error => error.path === 'name').forEach(error => { %>
                                            <p class="text-danger"><%= error.msg %></p>
                                        <% }); %>
                                    <% } %>
                                    
                                    <label for="description" class="form-label">Description</label>
                                    <input type="text" placeholder="Type here" name="description" class="form-control" id="category_name" />
                                    <% if (errors && errors.some(error => error.path === 'description')) { %>
                                        <% errors.filter(error => error.path === 'description').forEach(error => { %>
                                            <p class="text-danger"><%= error.msg %></p>
                                        <% }); %>
                                    <% } %>
                                </div>
                               
                           
                                <div class="d-grid">
                               
                                    <%if(message){%>
                                        <p class="text-success"><%= message %></p>
                                        <%}%>
                                    <button class="btn btn-primary">Create category</button>
                                </div>
                            </form>
                        </div>




                        <div class="col-md-9">
                            <div class="table-responsive">


                                <table class="table table-hover">
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                        
                
                                        
                                    </tr>
                                    <%
                                    if(cate.length > 0) {
                                        for(let i=0; i<cate.length; i++) { %>
                                            <tr>
                                                <td width="20%"><%= cate[i].name %></td>
                                                <td width="30%"><%= cate[i].description %></td>
                                                <td width="20%"><%= cate[i].is_active ? 'Active' : 'InActive' %></td>

                                                
                                            <td width="60%">
                                                <a href="/admin/edit-cate?id=<%=cate[i]._id %>" class="btn btn-success">Edit</a>
                                                <a href="/admin/delete-cate?id=<%=cate[i]._id %>&action=<%= cate[i].is_active ? 'Active' : 'InActive' %>" class="btn btn-danger"><%= cate[i].is_active ? 'Unlist' : 'list and Restore' %></a>
                                                
                                             </td>
                                            </tr>
                                    <%
                                        }
                                    } else { %>
                                        <tr>
                                            <td colspan="4">Category Not Found</td>
                                        </tr>
                                    <%
                                    }
                                    %>
                                    
                                    
                                    </table>
                               
                            </div>
                        </div> 
                    </div> 
                </div> 
            </div> 
        </section> 
       
    </main>
    <script src="/public/assets/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="/public/assets/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="/public/assets/js/vendor/select2.min.js"></script>
    <script src="/public/assets/js/vendor/perfect-scrollbar.js"></script>
    <script src="/public/assets/js/vendor/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/public/assets/js/main.js" type="text/javascript"></script>
</body>


</html>