<div class="container p-5">
    <div class="card mb-3 p-3" id="card-login">
        <div class="row">
            <div class="col-md-6">
                <div class="card-body">
                    <div>
                        <form id="resetPasswordForm" method="post" onsubmit="return validateForm(event)">
                          
                            <div class="container p-4 form-group">
                                <h2 class="text-center">change Password?</h2>
                                <% if (typeof message !== 'undefined') { %>
                                    <p class="text-center text-danger"><%= message %></p>
                                <% } %>
                                <label class="form-label">Enter current password</label>
                                <input type="password" id="current" name="current" class="password form-control mb-2"  required>
                                <div id="currentError" class="text-danger"></div>
                                <label class="form-label">Enter New Password</label>
                                <input type="password" id="password" name="password" class=" password form-control mb-2" required>
                                <div id="passwordError" class="text-danger"></div>
                                <label class="form-label">Enter New Password Again</label>
                                <input type="password" id="againpassword" name="againpassword" class="password form-control  mb-2"  required>
                                <div id="againpasswordError" class="text-danger"></div>
                                <div id="main-error" class="text-danger"></div>
                                <button class="btn btn-success rounded-pill ps-4 pe-4 pt-2 pb-2 mt-2" type="submit">Submit</button>
