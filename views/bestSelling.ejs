                                    </tr>
                                
                                            <tr>
                                                <td width="20%"><%= popularityByCategory[i].categoryName %></td>
                                                
                                            <td width="60%">
                                                <a href="/admin/edit-cate?id=<%=popularityByCategory[i]._id %>" class="btn btn-success">Edit</a>
                                                
                                                
                                             </td>
                                            </tr>
                                    <%
                                        }
                                    } else { %>
                                        <tr>
                                            <td colspan="4">Category Not Found</td>
                                        </tr>
                                    <%
                                    }
                                    %>
                                    
                                    
                                    </table>
                               
                            </div>
                     
                </div>
                    
    
