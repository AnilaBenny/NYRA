                        for(let i=0; i<popularityByCategory.length; i++) { %>
                            <div class="col-xl-3 col-lg-4 col-md-6">
                   
                            <div class="table-responsive">


                                <table class="table table-hover">
                                    <tr>
                                        <th>Name</th>
                                   
