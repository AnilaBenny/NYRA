


<%- include('header') -%>
<body style="background:url(/public/assets/images/banner/loginbanner.jpg);background-repeat: no-repeat;background-size: cover;">



<div class="container p-5" >

<div class="card mb-3 p-5 " id="card-register">
    <div class="row">
      
      <div class="col-md-6">
        <div class="card-body">
            <div>
                <form action="/register" method="post" enctype="multipart/form-data">
                    <% if (typeof message !== 'undefined') { %>
                        <p class="text-success"><%= message %></p>
                    <% } %>
            
                    <div class="container p-4 form-group">
                        <h2 class="text-center">Register Account</h2>
                        <label class="form-label">Enter your full name</label>
                        <input type="text" name="name" class=" form-control mb-2" required>
                        
                        
            
                        <label class="form-label">Enter your email</label>
                        <input type="email" name="email"  class="form-control mb-2" required>

                        <label class="form-label">Enter OTP</label>
                        <input type="text" name="otp" class="form-control mb-2" required>

                        <label class="form-label">Mobile Number</label>
                        <input type="text" name="mobile" class="form-control mb-2" required>
            
                        <label class="form-label">Set Password</label>
                
                        <input type="password" name="password"  class="form-control mb-2" required>
                        
                        <% if(typeof message !=='undefined'){ %>
                          <p id="display" class="text-success"> <%= message %>
                            
                          </p>
                        <%}%>
                      
                       
                        <button class="btn btn-info rounded-pill ps-4 pe-4 pt-2 pb-2 mt-2">
                            Sign up
                          </button>
                         
                            <a href="/login" class="btn btn-success text-white rounded-pill ps-4 pe-4 pt-2 pb-2 mt-2">Existing User? Log in</a>
                          
            
                    </div>
                </form>
            </div>
        </div>
      </div>
      <div class="col-md-6">
        <img src="/public/assets/images/The Mood Guide.jpeg" class="img-fluid rounded-start" alt="image">
      </div>
    </div>
  </div>
      
</div>

<%- include('footer') -%>